{
   "content_scripts": [{
      "css": ["cardstyles.css"],
      "js": ["output.js", "cards.js"],
      "matches": [
         "*://*.faeria.com/*",
         "*://*.reddit.com/*",
         "*://*.metagaming.tv/*"
      ],
      "run_at": "document_idle"
   }],
   "description": "Adds Faeria card image hevers for any card name in text anywhere on the faeria site, reddit, or metagaming.tv.",
   "icons": {
      "128": "sigil-128.png"
   },
   "key": "",
   "manifest_version": 2,
   "name": "Faeria Card Plugin",
   "options_ui": {
      "chrome_style": true,
      "page": "options.html"
   },
   "permissions": ["tabs", "storage"],
   "short_name": "Faeria Card Plugin",
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "0.0.1"
}
